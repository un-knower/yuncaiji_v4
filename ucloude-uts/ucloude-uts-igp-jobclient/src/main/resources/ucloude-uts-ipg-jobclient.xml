<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-4.0.xsd"
>
	<import resource="igpApplicationContext.xml" />
    
    <bean  id="jobClient" class="cn.uway.ucloude.uts.spring.JobClientFactoryBean" init-method="start">
    	<property name="locations" value="ucloude.uts.jobclient.cfg"/>
    	<property name="jobCompletedHandler">
            <bean class="cn.uway.ucloude.uts.igp.jobclient.JobCompletedHandlerImpl"/>
        </property>
    </bean>
    
	<bean name="igpJobClientRunner" class="cn.uway.ucloude.uts.igp.jobclient.IGPJobClientRunner"
		init-method="runnerValidate">
		<property name="taskQueue" ref="taskQueue" />
		<property name="taskLoader" ref="taskLoader" />
		<property name="taskTrigger" ref="taskTrigger" />
		<!--  
		<property name="console" ref="console" />
		<property name="memCleaner" ref="memCleaner" />
		<property name="pwCommandLine" ref="pwCommandLine" />
		-->
	</bean>
</beans>